# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

#custom
[*.{cs}]

#Prefer "var"
csharp_style_var_when_type_is_apparent = true
#Don't prefer "var"
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_elsewhere = false:suggestion

#Prefer braces when multiline
csharp_prefer_braces = when_multiline
csharp_style_expression_bodied_methods  = when_on_single_line

#Roslynator
#dotnet_diagnostic.<RULE_ID>.severity = <default|none|silent|info|warning|error>
#dotnet_diagnostic.RCS1192.severity = error

#Prefer no inline method call
dotnet_diagnostic.RCS1124.severity = none

#resharp

#Meziantou.Analyzer
dotnet_diagnostic.MA0004.severity = none